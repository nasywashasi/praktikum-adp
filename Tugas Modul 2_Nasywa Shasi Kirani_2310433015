totalminuman = porsiminuman*minuman
if (minuman == 1):
    print("Total pesanan = Rp",(porsiminuman*8000))
elif (minuman == 2):
    print("Total pesanan = Rp",(porsiminuman*12000))
elif (minuman == 3):
    print("Total pesanan = Rp",(porsiminuman*4000))
else : print("Menu Tidak Valid")
print("------------------------------")
nama = input("Nama pemesan = ")
totalpesanan = porsimakanan+porsiminuman
totalharga = totalmakanan+totalminuman
print("Atas nama",nama)
print("Total pesanan Anda = ",(porsimakanan+porsiminuman))
if ((makanan == 1)&(minuman == 1)):
    print("Total harga = Rp",((porsimakanan*12000)+(porsiminuman*8000)))
elif ((makanan == 1)&(minuman == 2)):
    print("Total harga = Rp",((porsimakanan*18000)+(porsiminuman*12000)))
