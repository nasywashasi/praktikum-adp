print("Menu Makanan Saki Resto")
print("1. Kwetiau - Rp12000")
print("2. Mie Ayam - Rp18000")
print("3. Pangsit Goreng - Rp20000")
makanan = float(input("Pesanan Anda = "))
porsimakanan = float(input("Jumlah pesanan Anda = "))
totalmakanan = porsimakanan*makanan
if (makanan == 1):
    print("Total pesanan = Rp",(porsimakanan*12000))
elif (makanan == 2):
    print("Total pesanan = Rp",(porsimakanan*18000))
elif (makanan == 3):
    print("Total pesanan = Rp",(porsimakanan*20000))
else : print("Menu Tidak Valid")
print("----------------------------")
print("Menu Minuman Saki Resto")
print("1. Milo dingin - Rp8000")
